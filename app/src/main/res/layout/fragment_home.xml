<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_home"
    tools:context="com.example.android.technoriti.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView_litfest"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_brainden"
        android:layout_marginTop="132dp" />

    <TextView
        android:id="@+id/textView_techie"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/textView_litfest"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/textView_brainden" />

    <TextView
        android:id="@+id/textView_parakaram"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/textView_techie"
        android:layout_alignEnd="@+id/textView_exhibition" />

    <TextView
        android:id="@+id/textView_vista"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/textView_litfest"
        android:layout_below="@+id/textView_litfest"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/textView_brainden"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_vista"
        android:layout_marginStart="33dp"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/textView_exhibition"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/textView_specialevent" />

    <TextView
        android:id="@+id/textView_specialevent"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/textView_brainden"
        android:layout_alignBottom="@+id/textView_brainden"
        android:layout_alignStart="@+id/textView_techie" />

    <TextView
        android:id="@+id/textView_fundoz"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/textView_brainden"
        android:layout_alignEnd="@+id/textView_exhibition" />
</RelativeLayout>
